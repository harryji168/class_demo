<%- include("./partials/header.ejs") %>
    <form action="/thank_you" method="GET">
        <div>
            <label for="fullName">What is your name?</label>
            <br>
            <input type="text" id="fullName" name="fullName">
        </div>
        <div>
            <label for="favouriteColour">What is your favourite colour?</label>
            <br>
            <input type="color" id="favouriteColour" name="favouriteColour">
        </div>
        <div>
            <label for="message">What's on your mind?</label>
            <br>
            <textarea name="message" id="message" cols="30" rows="10"></textarea>
        </div>
        <div>
            <label for="">What's your favourite day of the week?</label>
            <br>
            <% const days = [
                "Sunday",
                "Monday",
                "Tuesday",
                "Wednesday",
                "Thursday",  
                "Friday",
                "Saturday"] %>
            <% for (let option of days) {%>
                <input type="radio" name="favouriteDay" value="<%= option %>" id="<%= option %>">
                <label for="<%= option%>"><%= option%></label>
                <br>
            <% } %>
        </div>
        <input type="submit" value="Submit">
    </form>
    <%- include("./partials/footer.ejs") %>
    